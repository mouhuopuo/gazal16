<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_dist_form" model="ir.ui.view">
        <field name="name">companies.disturubition.form</field>
        <field name="model">companies.disturubition</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_chatter">
                            <field name="message_follower_ids"/>
                             <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                        </div>
                    </group>
                    <div class="oe_title">
                        <h1>
                            <field name="ref" readonly="1"/>
                            <field name="company_id" readonly="1" options="{'clickable': '1'}"/>
                        </h1>

                    </div>
                    <group>
                        <group>
                            <field name="account"/>
                            <field name="date"/>
                            <field name="frequency" default="monthly"/>
                            <field name="journal"/>
                            <field name="conter_account"/>

                        </group>
                        <group>
                            <field name="account_current_balance"/>
                            <field name="account_type"/>
                            <field name="total_rate"/>
                            <field name="or_date" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Company" name="doctor_desc">

                            <field name="company_ids">
                                <tree editable="bottom">

                                    <field name="company"/>
                                    <field name="destination_account"/>
                                    <field name="counter_account"/>
                                    <field name="journal"/>
                                    <field name="rate" widget="percentage"/>
                                </tree>


                            </field>

                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">companies.disturubition.tree</field>
        <field name="model">companies.disturubition</field>
        <field name="arch" type="xml">
            <tree>
                <header>
                </header>
                <field name="account"/>
                <field name="date"/>
                <field name="journal"/>
                <field name="frequency"/>
                <field name="conter_account"/>
            </tree>
        </field>
    </record>

    <record id="action_com_dis" model="ir.actions.act_window">
        <field name="name">Companies disturubition</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">companies.disturubition</field>
        <field name="view_mode">tree,form</field>

    </record>

    <menuitem
            id="menu_com_dist"
            name="Company Distrubution"
            parent="account.menu_finance_entries"
            action="action_com_dis"
            sequence="10"/>


</odoo>